<div class="opendysfont">

<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo"><i class="material-icons left">home</i></a>
  </div>
</nav>
<br><br>

<div id="signuphead">
  <div class="imgimg">
   <%= link_to image_tag("clipboard.png") %>
      <br>Create New Profile
 </div>
 </div>

<div id="sign-up-form" class="container">

  <form class="col s6 offset-s6" action="/users" method="post">
       <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

       <div class="row">
         <div class="input-field col s12">
            <input id="first_name" type="text" class="validate" value="David" name="firstname" required="" aria-required="true">
            <label for="first_name" data-error="wrong">First Name</label>
          </div>
       </div>

       <div class="row">
          <div class="input-field col s12">
            <input id="last_name" type="text" class="validate" value="Liu" name="lastname" required="" aria-required="true">
            <label for="last_name" data-error="wrong">Last Name</label>
          </div>
       </div>

       <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" name="email" class="validate" value="davidliu@gmail.com" style="font-size: 30px">
            <label for="email" style="font-size: 30px">Email</label>
          </div>
       </div>

       <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" name="password" class="validate" value="davidavid">
            <label for="password">Password</label>
          </div>
       </div>

       <div class="row">
          <button class="modal-action modal-close waves-effect waves-green btn">SIGN UP</button>
      </div>
    </div>
  </form>
</div>

<br>
