<% if logged_in? %>

  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo"><i class="material-icons left">home</i></a>
      <ul class="right">
        <li><a href="/logout"><i class="material-icons left">exit_to_app</i>Logout</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <h1> Hello <%= current_user.firstname %>, </h1>

    <form class="col s6 offset-s6" action="/users/url" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <input type="text" name="url">
      <button>Search</button>
    </form>

  </div>

<% else %>

  <h1>Failed</h1>

<% end %>
